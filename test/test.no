Vec :: struct {
    x : s64;
    y : s64;
}

AABB :: struct {
    pos: Vec;
    size: Vec;
}

main :: () -> s64 {

    s : Vec = { 3, 4 };
    r : AABB = { { 1, 2 }, s };

    return r.pos.x + r.pos.y + r.size.x + r.size.y;
}
