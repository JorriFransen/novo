Vec :: struct {
    x : s64;
    y : s64;
}

add :: (a: Vec, b: Vec) -> Vec {
    // r : Vec = { a.x + b.x, a.y + b.y };
    // return r;
    return { a.x + b.x, a.y + b.y };
}

main :: () -> s64 {
    a : Vec = { 1, 2 };
    r := add(a, { 11, 22 });
    return r.x + r.y;
}

