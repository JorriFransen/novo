printf :: (format: *u8, ..) -> s32 #foreign;
// malloc :: (size: s64) -> *void #foreign;
// free :: (ptr: *void) -> void #foreign;


Vec :: struct {
    x: int; y: int;
}

AABB :: struct {
    pos: Vec; size: Vec;
}

main :: () {

    printf("sizeof(int): %d\n".data, sizeof(int));
    printf("sizeof(u8): %d\n".data, sizeof(u8));
    printf("sizeof(:u8): %d\n".data, sizeof(:u8));
    printf("sizeof(:*int): %d\n".data, sizeof(:*int));
    
    printf("sizeof(Vec): %d\n".data, sizeof(Vec));
    printf("sizeof(AABB): %d\n".data, sizeof(AABB));
    printf("sizeof(:*AABB): %d\n".data, sizeof(:*AABB));
}
