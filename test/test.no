putchar :: (char: s32) -> s32 #foreign;
// puts :: (str: *u8) -> s32 #foreign;
// foreign_add :: (a: s64, b: s64) -> s32 #foreign;

main :: () -> int {

    str := "abcd\n";
    end : *u8 = null;
    start := str.data;
    end = start + str.length;

    assert(end - str.length == start);

    c := start;
    while (c != end) {
        putchar(cast(s32, <c));
        c += 1;
    }

    return end - start;
}

